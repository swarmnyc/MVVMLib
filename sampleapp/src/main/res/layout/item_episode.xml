<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mvvm="http://schemas.android.com/apk/res-auto">

    <data>

        <import alias="CropType" type="com.swarmnyc.mvvmlib.binding.image.ImageCropType"/>
        <variable
            name="viewmodel"
            type="com.swarmnyc.mvvmlib.sampleapp.viewmodel.EpisodeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            mvvm:image="@{viewmodel.imageUri}"
            mvvm:imageCrop="@{CropType.Round}"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="6"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:text="@{viewmodel.title,default=NOTITLE}"
            />

        <ImageView
            android:layout_weight="1"
            android:layout_width="32dp"
            android:layout_height="64dp"
            android:visibility="gone"
            mvvm:image="@{viewmodel.avatarUri}"/>

    </LinearLayout>
</layout>