<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.swarmnyc.mvvmlib.sampleapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="MVVMLib Sample App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SecondActivity"
            android:label="Second Activity"/>
        <activity
            android:name=".ui.ThirdActivity"
            android:label="Third Activity"/>
        <activity android:name=".ui.FirstActivity"/>
        <activity android:name=".ui.OneFragmentActivity"/>
        <activity android:name=".ui.TwoFragmentActivity"/>
        <activity android:name=".ui.BindingActivity"/>
        <activity android:name=".ui.RecyclerViewActivity"/>
    </application>

</manifest>